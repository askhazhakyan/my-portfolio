{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2016"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "jsx": "react",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/types/*"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "react",
      "react-dom"
    ],
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
